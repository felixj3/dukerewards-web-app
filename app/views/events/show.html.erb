<!DOCTYPE html>
<head>
    <meta charset='utf-8'/>
    <title>Duke Rewards</title>
    <%= stylesheet_link_tag "application.css" %>
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,400i,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
</head>

<body>
  <p id="notice"><%= notice %></p>

  <nav>
    <ul id="menu">
      <%= image_tag("duke_wordmark_white.png", :alt => "Duke Wordmark") %>
      <li class="name"> Duke Rewards </li>
      <li><%= link_to "REWARDS", rewards_path %></li>
      <li><%= link_to "EVENTS", events_path, class: "active" %></li>
      <li><%= link_to "ANNOUNCEMENTS", announcements_path %></li>

      <!-- <li><%= link_to "USERS", users_path %></li> -->
    </ul>
  </nav>

  <h1>View Event</h1>

  <ul id="toolbar">
      <li><%= link_to '+ Add', new_event_path %></li>
      <li><%= link_to 'Display', events_path, class: "active" %></li>
  </ul>

  <div class="edit">

    <%= link_to 'Return to All Events', events_path, class: "back" %>
    <%= link_to 'Edit', edit_event_path(@event), class: "back" %>

    <div class="view">
      <div class="showlabel">
        <label>Name:</label>
        <label class="autofilled"><%= @event.name %></label>
      </div>

      <div class="showlabel">
        <label>Start time:</label>
        <label class="autofilled"><%= @event.start_time %></label>
      </div>

      <div class="showlabel">
        <label>End time:</label>
        <label class="autofilled"><%= @event.end_time %></label>
      </div>

      <div class="showlabel">
        <label>Location:</label>
        <label class="autofilled"><%= @event.location %></label>
      </div>

      <div class="showlabel">
        <label>Event parameter:</label>
        <label class="autofilled"><%= @event.radius %></label>
      </div>

      <div class="showlabel">
        <label>Description:</label>
        <label class="autofilled"><%= @event.description %></label>
      </div>

      <div class="showlabel">
        <label>Points:</label>
        <label class="autofilled"><%= @event.points %></label>
      </div>

      <div class="showlabel">
        <label>Category:</label>
        <label class="autofilled"><%= @event.category %></label>
      </div>

      <div class="showlabel">
        <label>QR Code:</label>
        <%= RQRCode::QRCode.new(@event.QRnumber).as_svg( offset: 0, color: "000", shape_rendering: 'crispEdges', module_size: 6, standalone: true ).html_safe %>
      </div>

    </div>
  </div>
</body>
